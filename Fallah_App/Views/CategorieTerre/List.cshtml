@model List<Fallah_App.Models.CategoryTerre>
@section title{
    <title>Liste des categories</title>
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2> Categorie</h2>
                                    <p>Liste des Categories</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>

                                    <th>Attribut de categorisation</th>
                                    <th>Valeur Minimal</th>
                                    <th>Valeur Maximal</th>
                                   

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (CategoryTerre c in Model)
                                {
                                    <tr>
                                        <td>@c.Attribut_De_Categorisation</td>
                                        <td>@c.Valeur_Min</td>
                                        <td>@c.Valeur_Max</td>
                                        <td>
                                            <a class="btn btn-success success-icon-notika btn-reco-mg btn-button-mg " href="Modifier?id=@c.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="modifier cette Categorie" title="" data-original-title="modifier">
                                                <i class="notika-icon notika-draft"></i>
                                            </a>
                                            <a class="btn btn-deeporange deeporange-icon-notika btn-reco-mg btn-button-mg" href="Supprimer?id=@c.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="supprimer cette categorie" title="" data-original-title="supprimer">
                                                <i class="notika-icon notika-close"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>