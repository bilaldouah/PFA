@section title{
    <title>Information</title>
}
    @section style{
    <style>
        .flex {
            display: flex;
        }

        .around {
            justify-content: space-around;
        }

        .flex2 {
            flex-grow: 2;
        }
        .h-100{
            height:50%
        }
        .w-75{
            width:75%;
        }
    </style>
}
    @model Fallah_App.Models.Demande;
<div class="breadcomb-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcomb-list">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcomb-wp">
                                    <div class="breadcomb-icon">
                                        <i class="notika-icon notika-support"></i>
                                    </div>
                                    <div class="breadcomb-ctn">
                                        <h2>Information</h2>
                                        <p>Les Information d'une demande</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="contact-area">
        <div class="container">
            <div class="row">
                <div class="contact-list ">
                    <h3 style="text-align:center">Date de Demande: @Model.Date_Demande</h3>
                    <div class="flex">
                        <div class="contact-win">
                            <div class="contact-img">
                                <img src="~/imageClient/adnane.jpg" alt="" class="w-75 h-100"/>
                            </div>
                        </div>
                        <div class="flex2">
                            <div class="contact-ctn">
                                <div class="contact-ad-hd">
                                    <h2>Nom et Prenom</h2>
                                    <p class="ctn-ads">@Model.Nom @Model.Prenom</p>
                                </div>
                                <div class="flex">
                                    <div class="contact-ad-hd">
                                        <h2>E-Mail</h2>
                                        <p class="ctn-ads">@Model.Email</p>
                                    </div>
                                    <div class="contact-ad-hd">
                                        <h2>Date de Naissance</h2>
                                        <p class="ctn-ads">@Model.Date_De_Naissance</p>
                                    </div>
                                </div>
                            </div>
                            <div class="contact-ctn">
                                <div class="contact-ad-hd">
                                    <h2>Etat</h2>
                                @if (Model.Statut == true)
                                {
                                    <p class="ctn-ads">Refuser</p>
                                }
                                else
                                {
                                    <p class="ctn-ads">En Attend</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
