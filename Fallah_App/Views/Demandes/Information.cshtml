@section title{
    <title>Information</title>
}
    @section style{
    <style>

        .user-info {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 50px;
        }

            .user-info img {
                width: 150px;
                height: 150px;
                object-fit: cover;
                border-radius: 50%;
                margin-right: 30px;
            }

            .user-info h3 {
                font-size: 30px;
                font-weight: 700;
                margin: 0;
                margin-right: 20px;
            }

            .user-info p {
                font-size: 18px;
                margin: 0;
            }

        .user-details {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

            .user-details div {
                width: calc(50% - 10px);
                margin-bottom: 20px;
            }

            .user-details h4 {
                font-size: 24px;
                font-weight: 700;
                margin: 0 0 10px;
            }

            .user-details p {
                font-size: 18px;
                margin: 0;
            }
          .contact {
          margin-bottom: 10px;
        }

        .label {
          color: #808080;
          font-size: 16px;
          font-weight: bold;
        }

        .value {
          font-size: 18px;
        }
    </style>
}
    @model Fallah_App.Models.Demande;
<div class="breadcomb-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcomb-list">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcomb-wp">
                                    <div class="breadcomb-icon">
                                        <i class="notika-icon notika-support"></i>
                                    </div>
                                    <div class="breadcomb-ctn">
                                        <h2>Information</h2>
                                        <p>Les Information d'une demande</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </div>
    <div class="contact-area">
        <div class="container">
            <div class="row">
                <div class="contact-list ">
       
        <div class="user-info">
            <img src="~/imageClient/@Model.Image" alt="@Model.Nom @Model.Prenom">
            <div>
                <h3>@Model.Nom @Model.Prenom</h3>
                <p>@Model.Date_Demande</p>
            </div>
        </div>
        <div class="user-details">
            <div class="contact">
                <span class="label">Nom:</span>
                <span class="value">@Model.Nom</span>
            </div>
            <div class="contact">
                <span class="label">Prenom:</span>
                <span class="value">@Model.Prenom</span>
            </div>
            <div class="contact">
                <span class="label">Email:</span>
                <span class="value">@Model.Email</span>
            </div>
            <div class="contact">
                <span class="label">Telephone</span>
                <span class="value">@Model.Telephone</span>
            </div>
            <div class="contact">
                <span class="label">Date de Naissance</span>
                <span class="value">@Model.Date_De_Naissance</span>
            </div>
            <div class="contact">
                <span class="label">Agriculteur Forme :</span>
                 @if (Model.forme == true)
                  {
                    <span class="value">Forme</span>
                  }else{
                     <span class="value">Non Forme</span>
                  }
            </div>
           <div class="contact">
                <span class="label">Statut</span>
                 @if (Model.Statut == true)
                  {
                    <span class="value">Refuser</span>
                  }else{
                     <span class="value">En attend</span>
                  }
            </div>
            @if (Model.Statut == true){
            <div class="contact">
                <span class="label">Admin qui a Refuser</span>
                <span class="value">Model.webMaster.Nom</span>
            </div>
            }
             @if (Model.Statut == false)
             {
             <div>
                     <a class="btn btn-success success-icon-notika btn-reco-mg btn-button-mg sa-warning" data-confirm="Accepter" data-Action="Accepter!" data-acc="La demande a ete bien accepter" data-text="La demande vas etre Accepter" data-href="/Demandes/Accepter/@Model.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="Accepter la demande du @Model.Nom" title="" data-original-title="Accepter">
                        Accepter
                    </a>
                    <a class="btn btn-deeporange deeporange-icon-notika btn-reco-mg btn-button-mg sa-warning" data-confirm="Refuser" data-Action="Refuser!" data-acc="La demande a ete bien Refuser" data-text="La demande vas etre Refuser" data-href="/Demandes/Refuser/@Model.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="Refuser la demande du @Model.Nom" title="" data-original-title="Refuser">
                        Refuser
                    </a>
            </div>
            }
         </div>
            
    </div>
</div>
</div>
</div>

