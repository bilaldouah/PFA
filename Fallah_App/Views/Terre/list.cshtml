@model List<Fallah_App.Models.Terre>
@section title{
        <title>Liste des Terre</title>
}
<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Liste des Terre</h2>

                                    <a class="btn btn-deeporange deeporange-icon-notika btn-reco-mg btn-button-mg" href="ajouter" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="Ajouter Categorie" title="" data-original-title="Ajouter">
                                        Ajouter
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>

                                    <th>id</th>
                                    <th>localisation</th>
                                    <th>surface</th>
                                    <th>image</th>
                                    <th>Hauteur</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Terre t in Model)
                                {
                                        <tr>
                                            <td>@t.Id</td>
                                            <td>@t.Type</td>
                                            <td>@t.Localisation</td>
                                            <td>@t.Surface</td>
                                            <td>@t.image</td>
                                            <td>@t.Hauteur</td>
                                            <td>
                                                <a class="btn btn-success success-icon-notika btn-reco-mg btn-button-mg " href="Modifier?id=@t.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="modifier cette terre" title="" data-original-title="modifier">
                                                    <i class="notika-icon notika-draft"></i>
                                                </a>
                                                <a class="btn btn-deeporange deeporange-icon-notika btn-reco-mg btn-button-mg" href="Supprimer?id=@t.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="supprimer cette terre" title="" data-original-title="supprimer">
                                                    <i class="notika-icon notika-close"></i>
                                                </a>

                                            </td>
                                        </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>