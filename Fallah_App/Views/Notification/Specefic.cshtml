@model Fallah_App.Models.Plante
@section title{
    <title>envoyer une notification</title>
}
 <head>
    @section style
        {
        <link rel="stylesheet" href="~/css/bootstrap-select/bootstrap-select.css">
  
    }

 </head>
    <div class="breadcomb-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcomb-list">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcomb-wp">
                                    <div class="breadcomb-icon">
                                        <i class="notika-icon notika-windows"></i>
                                    </div>
                                    <div class="breadcomb-ctn">
                                        <h2>Notification </h2>
                                        <p>Envoyer une Notification</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="summernote-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <form method="post">
                        <div class="summernote-wrap mg-t-30">
                            <div class="cmp-tb-hd text-center">
                                <div class="w-100 ">
                                    <label>Choisir Plante</label>

                                    <select asp-for="Id" class="selectpicker" data-live-search="true">
                                    @foreach (Plante p in ViewBag.listDesPlantes)
                                    {
                                        <option class="text-center" value="@p.Id">@p.Nom</option>

                                    }
                                </select>

                                </div>
                            <div class="form-example-int mg-t-15">
                                <div class="row">
                                    <div class="col-lg-12 col-md-7 col-sm-7 col-xs-12 dcenter">
                                        <button class="btn btn-success notika-btn-success" type="submit">Modifier</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section script
    {
    <script src="~/js/bootstrap-select/bootstrap-select.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
  }