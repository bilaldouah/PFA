@model Fallah_App.Models.Notification
@section title
    {
    <title>Ajouter Notification</title>
}
 
@section style
{
     <link rel="stylesheet" href="~/css/bootstrap-select/bootstrap-select.css">
        <link rel="stylesheet" href="~/css/summernote/summernote.css">
    <link rel="stylesheet" href="~/css/themesaller-forms.css">
        <link rel="stylesheet" href="~/style.css">
    <link rel="stylesheet" href="~/css/chosen/chosen.css">
}
 
<div class="breadcomb-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcomb-list">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcomb-wp">
                                    <div class="breadcomb-icon">
                                        <i class="notika-icon notika-windows"></i>
                                    </div>
                                    <div class="breadcomb-ctn">
                                        <h2>Notification </h2>
                                        <p>Ajouter une Notification</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="summernote-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                      <form method="post">
                    <div class="summernote-wrap mg-t-30">
                            <div class="cmp-tb-hd text-center">
                            <div class="w-100 ">
                                <label>Ajouter un type de Notification</label>

                                    <select asp-for="type" class="selectpicker" data-live-search="true">

                                        <option class="text-center" value="risque">risque</option>
                                    <option class="text-center" value="moyen">moyen</option>
                                        <option class="text-center" value="informatif">informatif</option>


                                                    </select>
                                                  
                            </div>
                                <br/>
                                
                               
                                 <div class="cmp-tb-hd bsc-smp-sm">
                            <label>Conseil en Francais</label>
                        </div>
                             <textarea  class="html-editor" asp-for="TextFrancais"></textarea>
                                                             <span class="text-danger">@ViewBag.nullTextFr </span>
                                <br />
                        <div class="cmp-tb-hd bsc-smp-sm">
                            <label>Conseil En arabe</label>
                        </div>
                            <textarea class="html-editor" asp-for="TextArabe"></textarea>
                                                            <span class="text-danger">@ViewBag.nullTextAr</span>


                        

                        <div class="form-example-int mg-t-15">
                            <div class="row">
                                <div class="col-lg-12 col-md-7 col-sm-7 col-xs-12 dcenter">
                                    <button class="btn btn-success notika-btn-success" type="submit">Ajouter</button>
                                </div>
                            </div>
                        </div>
                    </div>
                        </div>
                    </form>
                    </div>
        </div>
    </div>
        </div>
 

  @section script
  {
    <script src="~/js/bootstrap-select/bootstrap-select.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/summernote/summernote-updated.min.js"></script>
    <script src="~/js/summernote/summernote-active.js"></script>
    <script src="~/js/chosen/chosen.jquery.js"></script>
    <script src="~/js/vrecorder.js"></script>
  }