@section title{
    <title>Liste des Agriculteur</title>
}

    <div class="breadcomb-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcomb-list">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcomb-wp">
                                    <div class="breadcomb-icon">
                                        <i class="notika-icon notika-windows"></i>
                                    </div>
                                    <div class="breadcomb-ctn">
                                        <h2>Agriculteur</h2>
                                        <p>Liste des Agriculteur</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcomb area End-->
    <!-- Data Table area Start-->
    <div class="data-table-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="data-table-list">
                        <div class="table-responsive">
                            <table id="data-table-basic" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Nom</th>
                                        <th>Prenom</th>
                                        <th>Date de Naissance</th>
                                        <th>Detail</th>

                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (Agriculteur agr in Model)
                                {
                                    <tr>
                                        <td>@agr.Nom</td>
                                        <td>@agr.Prenom</td>
                                        <td>@agr.Date_De_Naissance</td>
                                        <td>
                                            <a class="btn btn-lightblue lightblue-icon-notika" href="/Compte/Information/@agr.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="Afficher tous les Informations du @agr.Nom" title="" data-original-title="Detail">
                                                <i class="notika-icon notika-next"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Date de Naissance</th>
                                    <th>Detail</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>