@model List<Fallah_App.Models.Sol>
@section title{
    <title>Liste des Sols</title>
}

    <div class="breadcomb-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="breadcomb-list">

                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="breadcomb-wp">
                                    <div class="breadcomb-icon">
                                        <i class="notika-icon notika-windows"></i>
                                    </div>
                                    <div class="breadcomb-ctn">
                                        <h2>Sol</h2>
                                        <p>Liste des Sols</p>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>

                                    <th>Type</th>
                                    <th>Couleur</th>
                                    <th>Acidité</th>
                                    <th>Action</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Sol s in Model)
                                {
                                    <tr>
                                        <td>@s.Type</td>
                                        <td><input type="color" value="@s.Couleur" readonly/></td>
                                        <td>@s.Acidite</td>
                                        <td>

                                            <a class="btn btn-success success-icon-notika btn-reco-mg btn-button-mg" asp-controller="Sol" asp-action="Modifier" asp-route-id="@s.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="modifier cette Categoriesol" data-original-title="Modifier">
                                                <i class="notika-icon notika-edit"></i>
                                            </a>
                                            <a class="btn btn-deeporange deeporange-icon-notika btn-reco-mg btn-button-mg sa-warning" data-confirm="Supprimer" data-text="La Plante vas étre supprimer" data-href="/Sol/Supprimer/@s.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="supprimer cette sol" data-original-title="Supprimer">
                                                <i class="notika-icon notika-close"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>

                                    <th>Type</th>
                                    <th>Couleur</th>
                                    <th>Acidité</th>
                                    <th>Action</th>


                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>