@model List<Fallah_App.Models.Sol>
@section title{
    <title>Liste des Sol</title>
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    <h2>Liste des Sols</h2>

                                    <a class="btn btn-deeporange deeporange-icon-notika btn-reco-mg btn-button-mg" href="ajouter" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="Ajouter Categorie" title="" data-original-title="Ajouter">
                                        Ajouter
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcomb area End-->
<!-- Data Table area Start-->
<div class="data-table-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="data-table-list">
                    <div class="table-responsive">
                        <table id="data-table-basic" class="table table-striped">
                            <thead>
                                <tr>

                                    <th>Type</th>
                                    <th>Couleur</th>
                                    <th>Acidité</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Sol s in Model)
                                {
                                    <tr>
                                        <td>@s.Type</td>
                                        <td>@s.Couleur</td>
                                        <td>@s.Acidite</td>
                                        <td>
                                            <a class="btn btn-success success-icon-notika btn-reco-mg btn-button-mg " href="Modifier?id=@s.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="modifier cette Categorie" title="" data-original-title="modifier">
                                                <i class="notika-icon notika-draft"></i>
                                            </a>
                                            <a class="btn btn-deeporange deeporange-icon-notika btn-reco-mg btn-button-mg" href="Supprimer?id=@s.Id" data-trigger="hover" data-toggle="popover" data-placement="top" data-content="supprimer cette categorie" title="" data-original-title="supprimer">
                                                <i class="notika-icon notika-close"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>