@model Fallah_App.Models.ConseilPlante
@section title
    {
    <title>Ajouter Conseil plante</title>
}
@section style
    {
    <link rel="stylesheet" href="~/css/bootstrap-select/bootstrap-select.css">
    <style>
        .bootstrap-select {
            width: 100% !important;
        }

        .dcenter {
            display: flex !important;
            justify-content: center !important;
        }

        .hrzn-fm {
            font-weight: bold !important;
        }

        <link rel="stylesheet" href="~/css/summernote/summernote.css" >

    </style>
}

<div class="breadcomb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcomb-list">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcomb-wp">
                                <div class="breadcomb-icon">
                                    <i class="notika-icon notika-windows"></i>
                                </div>
                                <div class="breadcomb-ctn">
                                    
                                    <p>Ajouter Conseil Plante</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-example-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                <div class="form-example-wrap mg-t-30">
                    <div class="dcenter w-100">
                        <div style="width:60%;">
                            <form method="post">
                                <div class="form-example-int form-horizental">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="summernote-wrap mg-t-30">
                        <div class="cmp-tb-hd">
                            
                            <p>Ajouter votre  conseil en francais</p>
                        </div>
                                                    <div class="cmp-tb-hd bsc-smp-sm">
                                                        <label>Basic Example</label>
                                                    </div>
                                                    <textarea asp-for="Text_Francais" class="html-editor cmp-tb-hd mg-t-20"></textarea>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                </div>
                                <div class="form-example-int form-horizental">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="summernote-wrap mg-t-30">
                                                    <div class="cmp-tb-hd">
                                                        
                                                        <p>أضف نصيحتك باللغة العربية</p>
                                                    </div>
                                                    <div class="cmp-tb-hd bsc-smp-sm">
                                                       
                                                    </div>
                                                    <textarea asp-for="Text_Arabe" class="html-editor cmp-tb-hd mg-t-20"></textarea>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-example-int form-horizental">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                                <label asp-for="Quantite_Eau" class="hrzn-fm"></label>
                                            </div>
                                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                                <div class="nk-int-st">
                                                    <input type="number" class="form-control input-sm" asp-for="Quantite_Eau" >
                                                </div>                                            
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-example-int form-horizental">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                                <label asp-for="Resultat_Attendue" class="hrzn-fm"></label>
                                            </div>
                                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                                <div class="nk-int-st">
                                                    <input type="text" class="form-control input-sm" asp-for="Resultat_Attendue">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-example-int form-horizental">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                                <label asp-for="Temperature_Max" class="hrzn-fm"></label>
                                            </div>
                                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                                <div class="nk-int-st">
                                                    <input type="number" class="form-control input-sm" asp-for="Temperature_Max">
                                                </div>



                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-example-int form-horizental">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                                <label asp-for="Temperature_Min" class="hrzn-fm"></label>
                                            </div>
                                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                                <div class="nk-int-st">
                                                    <input type="number" class="form-control input-sm" asp-for="Temperature_Min">
                                                </div>



                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-example-int form-horizental">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                                <label asp-for="Humidite_Max" class="hrzn-fm"></label>
                                            </div>
                                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                                <div class="nk-int-st">
                                                    <input type="number" class="form-control input-sm" asp-for="Humidite_Max">
                                                </div>



                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-example-int form-horizental">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                                <label  asp-for="Humidite_Min" class="hrzn-fm"></label>
                                            </div>
                                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                                <div class="nk-int-st">
                                                    <input type="number" class="form-control input-sm" asp-for="Humidite_Min">
                                                </div>



                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-example-int form-horizental">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                                <label asp-for="Vent_Max" class="hrzn-fm">  </label>
                                            </div>
                                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                                <div class="nk-int-st">
                                                    <input type="number" class="form-control input-sm" asp-for="Vent_Max">
                                                </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-example-int form-horizental">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                                <label asp-for="Vent_Min" class="hrzn-fm"></label>
                                            </div>
                                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                                <div class="nk-int-st">
                                                    <input type="number" class="form-control input-sm" asp-for="Vent_Min">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-example-int form-horizental mg-t-15">
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                                                <label asp-for="Weather_Code" class="hrzn-fm"></label>
                                            </div>
                                            <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                                                <div class="bootstrap-select fm-cmp-mg w-100">
                                                    <select asp-for="Weather_Code" class="selectpicker" data-live-search="true">
                                                        <option class="text-center" value="1">0</option>
                                                        <option class="text-center" value="2">1</option>
                                                        <option class="text-center" value="3">2</option>
                                                        <option class="text-center" value="4">3</option>
                                                        <option class="text-center" value="5">4</option>
                                                      
                                                    </select>
                                                  
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-example-int mg-t-15">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-7 col-sm-7 col-xs-12 dcenter">
                                            <button class="btn btn-success notika-btn-success" type="submit">Ajouter</button>
                                        </div>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section script
    {
    <script src="~/js/bootstrap-select/bootstrap-select.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/summernote/summernote-updated.min.js"></script>
    <script src="~/js/summernote/summernote-active.js"></script>
  }

